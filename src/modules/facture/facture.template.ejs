<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Facture <%= order.id %></title>
        <style>
            * {
                font-family: "Courier New", Courier, monospace;
            }
        </style>
    </head>
    <body>
        <h1><%= order.shop.title %></h1>
        <hr />
        <h2><%= new Date(order.date).toString() %></h2>
        <hr />
        <ul>
            <% products.forEach(item => { %> <%= item.product.title %> <%=
            item.product_v.title %> <% }); %>
        </ul>
    </body>
</html>
